<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanQRAgain">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="390dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"/>

        <ImageView
            android:id="@+id/wifi"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:src="@drawable/qris"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />

        <Button
            android:id="@+id/close2"
            android:layout_marginTop="10dp"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/close1"
            android:fontFamily="@font/poppins_600"
            android:background="@drawable/button_background2"
            android:radius="20dp"
            android:text="Close"
            android:textSize="13sp"
            android:textColor="#561310" />


        <Button
            android:id="@+id/close1"
            android:layout_marginTop="10dp"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/wifi"
            android:fontFamily="@font/poppins_600"
            android:background="@drawable/button_background2"
            android:radius="20dp"
            android:text="Change Payment Method"
            android:textSize="13sp"
            android:textColor="#561310" />

        <TextView
            android:id="@+id/helloTextView2"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/poppins_600"
            android:text="Please scan the QR code below to complete your order."
            android:textAlignment="center"
            android:textColor="#561310"
            android:textSize="18sp" />

