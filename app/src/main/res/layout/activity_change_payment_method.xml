<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePaymentMethod">

    <RelativeLayout
        android:layout_width="553dp"
        android:layout_height="260dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"/>

        <TextView
            android:id="@+id/helloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_600"
            android:text="How do you wanna pay?"
            android:textColor="#000000"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="75dp">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/money_bill_wave"/>

            <View
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/qr_scan"/>


        </LinearLayout>


        <RadioGroup
            android:id="@+id/radioGroup"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_cash"
                android:layout_marginTop="75dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Cash"
                android:textSize="23sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="60dp"
                android:layoutDirection="rtl"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_600"
                android:textColor="#561310"
                android:buttonTint="@color/radio_button_selector"
                />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@android:color/darker_gray" />


            <RadioButton
                android:id="@+id/radio_scan_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Scan QR"
                android:textColor="#561310"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layoutDirection="rtl"
                android:fontFamily="@font/poppins_600"
                android:textSize="23sp"
                android:buttonTint="@color/radio_button_selector" />

        </RadioGroup>

        <Button
            android:id="@+id/close2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/radioGroup"
            android:fontFamily="@font/poppins_600"
            android:background="@drawable/button_background2"
            android:radius="20dp"
            android:text="Change"
            android:textSize="13sp"
            android:textColor="#561310" />

        <Button
            android:id="@+id/close1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/close2"
            android:fontFamily="@font/poppins_600"
            android:background="@drawable/button_background2"
            android:radius="20dp"
            android:text="Close"
            android:textSize="13sp"
            android:textColor="#561310" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>